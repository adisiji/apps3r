<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/soft_green_header"/>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ic_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_shopping_cart_black_24dp"/>

    <TextView
        android:id="@+id/tv_card_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keranjang"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@id/ic_cart"
        android:layout_toRightOf="@id/ic_cart"
        android:layout_toEndOf="@id/ic_cart" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_card_edit_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        fancy:fb_text="Edit"
        fancy:fb_borderColor="@android:color/black"
        fancy:fb_focusColor="@color/grey_focus"
        fancy:fb_borderWidth="1dp"
        fancy:fb_ghost="true"
        fancy:fb_textColor="@color/black_toolbar"
        fancy:fb_textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/ic_cart"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tv_card_harga_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_cart"
        android:layout_alignTop="@id/btn_card_edit_keranjang"
        android:layout_alignBottom="@id/btn_card_edit_keranjang"
        android:gravity="center"
        android:text="Rp150.000"/>

    <TextView
        android:id="@+id/tv_card_total_keranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7/10"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/btn_card_edit_keranjang"
        android:layout_alignBottom="@id/btn_card_edit_keranjang"
        android:gravity="center"/>

</RelativeLayout>
</android.support.v7.widget.CardView>