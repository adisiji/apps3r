<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">
        <TextView
            android:id="@+id/title_pindah_produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_pindahkan_produk"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMassMover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_pindah_produk"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtke_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ke_paket"
            android:layout_below="@id/rvMassMover"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:id="@+id/spinner_penerima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/txtke_paket"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rvMassMover"
            android:padding="5dp" />

        <TextView
            android:id="@+id/txtdahulukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dahulukan_paket"
            android:layout_below="@id/spinner_penerima"
            android:layout_marginTop="8dp"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtdahulukan"
            android:layout_below="@id/spinner_penerima"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blac_stroke_box"
            android:layout_toRightOf="@id/txtke_paket"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:layout_above="@id/checkbox"
            android:layout_below="@id/rvMassMover"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_pindahkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fb_text="Pindahkan"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            app:fb_radius="20dp"
            app:fb_fontIconResource="&#xf064;"
            app:fb_focusColor="@color/dark_orange_btn"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/checkbox"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fb_text="Cancel"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            app:fb_radius="20dp"
            app:fb_fontIconResource="&#xf00d;"
            app:fb_ghost="true"
            app:fb_textColor="@color/black_toolbar"
            app:fb_borderWidth="1dp"
            app:fb_borderColor="@color/black_toolbar"
            app:fb_focusColor="@color/soft_grey_focus"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/btn_pindahkan"
            android:layout_toStartOf="@id/btn_pindahkan"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_below="@id/checkbox"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>