<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_title_konfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konfirmasi"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/content_confirm_message"
        android:layout_below="@id/tv_title_konfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="isi pemberitahuan"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_ok_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fancy:fb_text="Ok"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/content_confirm_message"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_cancel_dialog"
        android:layout_below="@id/content_confirm_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        fancy:fb_text="Cancel"
        android:layout_toLeftOf="@id/btn_ok_dialog"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        fancy:fb_ghost="true"
        fancy:fb_textColor="#000000"/>

</RelativeLayout>